<!DOCTYPE html>
<html lang="en">

<head>
        <%include partials/head%>
        <title>Checkout</title>
</head>

<body>
    <!-- header -->
    <%include partials/header%>
    <main>
        <div class="container">
            <div class="row">
                <div class="col s12 m6 l6">
                    <div class="row">
                        <h4>Shipping Information</h4>
                        <form method="POST" action="/contact" class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="full-name" type="text" class="validate" name='name' required>
                                    <label for="full-name">Name</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="full-name" type="text" class="validate" name='surname'>
                                    <label for="full-name">Surname</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="mob-no" type="text" class="validate" data-length="10" name='mobileNo' required>
                                    <label for="mob-no">Mobile Number</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="addr1" type="text" class="validate" name='flatHouse' required>
                                    <label for="addr1">Flat/House no.</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="addr2" type="text" class="validate" name='areaColony'>
                                    <label for="addr2">Area/Colony</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="addr3" type="text" class="validate" name='landmark'>
                                    <label for="addr3">Landmark</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="city" type="text" class="validate" name='townCity'>
                                    <label for="city">Town/City</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="state" type="text" class="validate" name='state' required>
                                    <label for="state">State</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="pin-code" type="text" class="validate" data-length="6" name='pinCode' required>
                                    <label for="pin-code">Pin Code</label>
                                </div>
                            </div>
                            <div class="row">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Proceed to payment
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col s12 m6 l6">
                    <h4>Payment</h4>
                </div>
            </div>
        </div>
    </main>
    <!-- footer -->
    <footer class="page-footer grey lighten-2 grey-text">
        <div class="container">
            <div class="row">
                <div class="col s12 m6 l3">
                    <h4 class="page-footer__heading">VESTE</h4>
                </div>
                <div class="col s12 m6 l3">
                    <h5 class="page-footer__heading">customer care</h5>
                    <ul>
                        <li><a href="" class="grey-text">shipping policy</a></li>
                        <li><a href="" class="grey-text">returns policy</a></li>
                        <li><a href="" class="grey-text">contact us</a></li>
                        <li><a href="" class="grey-text">about us</a></li>
                    </ul>
                </div>
                <div class="col s12 m6 l3">
                    <h5 class="page-footer__heading">visit our store</h5>
                    <p>500 Terry Francois Street San Francisco, CA 94158</p>
                </div>
                <div class="col s12 m6 l3">
                    <h5 class="page-footer__heading">stay connected</h5>
                    <p>
                        <a href="" class="grey-text"><i class="fab fa-instagram"></i></a>
                        <a href="" class="grey-text"><i class="fab fa-facebook-f"></i></a>
                        <a href="" class="grey-text"><i class="fab fa-twitter"></i></a>
                        <a href="" class="grey-text"><i class="fab fa-pinterest-p"></i></a>
                    </p>
                </div>
            </div>
        </div>
        <div class="footer-copyright center-align grey darken-4">
            <div class="container">Â© 2023 Copyright</div>
        </div>
    </footer>
    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#mob-no, #pin-code').characterCounter();
        });
    </script>
</body>

</html>