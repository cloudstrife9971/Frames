    <script>
      function black(pass) {
        document.getElementById("frame").style.borderColor = pass;
      }
      function change(pass) {
        document.getElementById(
        "invisibleBox"
        ).style.backgroundImage = pass;
        document.getElementById("frame").style.display="none"
        document.getElementById("vertical").style.display="none"
        document.getElementById("horizontal").style.display="none"

      }
      var length = document.getElementsByClassName("leftimg").length;
      for (var i = 0; i <= length - 1; i++) {
        document
          .getElementsByClassName("leftimg")
          [i].addEventListener("mouseleave", () => {
            document.getElementById("invisibleBox").style.backgroundImage = 'none';
            document.getElementById("frame").style.display="block"
        document.getElementById("vertical").style.display="block"
        document.getElementById("horizontal").style.display="block"
          });
      }
      function changeSize(pass1,pass2) {
        document.getElementById("vertical").innerText = "<----------- "+pass2+" ------------>";
          document.getElementById("horizontal").innerText= "<------------  "+pass1+" ------------>";
      }
